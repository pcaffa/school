{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="teachers/create">+ Novo
        </a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                 {% for teacher in teachers %}
                    <tr>                   
                        <td><span style="background-image: url({{teacher.avatar}})"></span>
                            {{teacher.name}}
                        </td>                            
                        <td>
                            {% for service in teacher.services %}                           
                               <span class="services"> {{service}}</span> 
                            {%endfor%}            
                        </td> 
                        <td>
                            <a href="/teachers/{{teacher.id}}">
                                <img src="/images/pageview.svg" alt="Ver">                      
                            </a>
                        </td>                    
                    </tr>
                {%endfor%}
            </tbody>
        </table>
    </div>
{% endblock content %}