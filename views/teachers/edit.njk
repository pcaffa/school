{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="avatar" style="background:url({{teacher.avatar}}) no-repeat center center / cover"></section>
    <section class="details">
        <form id="form-edit"  method="POST" action="/teachers?_method=PUT">        
            <h3>Editar Professor(a)</h3>

            {% include 'teachers/fields.njk' %}

            <input type="hidden" name="id" value={{teacher.id}} /> 
        </form>
        <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
            <input type="hidden" name="id" value={{teacher.id}} />     
        </form>
        <div class="buttons">
            <button form="form-edit" id="btn-edit" type="submit">Salvar</button> 
            <button form="form-delete" id="btn-delete" type="submit">Deletar</button>
        </div>         
    </section>       
</div>
{% include '../confirm.njk' %}
{% endblock content %} 