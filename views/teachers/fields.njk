<div class="item">
    <div>Avatar url</div>
    <input type="url" name="avatar" placeholder="http://" value="{{ teacher.avatar }}">      
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input type="text" name="name" placeholder="Nome do professor(a)" value="{{ teacher.name }}">
    </div>           
</div> 

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ teacher.birth }}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        
        <select name="schooling" placeholder="Selecione a escolaridade">
            <option value="EM" {% if teacher.schooling =='EM' %} selected {% endif %}>Ensino Médio Completo
            </option>
            <option value="ES" {% if teacher.schooling =='ES' %} selected {% endif %}>
                Ensino Superior Completo
                </option>
            <option value="M" {% if teacher.schooling =='M' %} selected {% endif %}>
                Mestrado
            </option>
            <option value="D" {% if teacher.schooling =='D' %} selected {% endif %}>
                Doutorado
            </option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input type="radio" name="classType" value="presencial"
            {% if teacher.classType=='presencial' %} checked{% endif %}>Presencial
        </span>
        <span>
            <input type="radio" name="classType" value="distancia"
            {% if teacher.classType=='distancia' %} checked{% endif %}> À distância
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="services" placeholder="Separe as matérias por vírgula" value="{{ teacher.services }}">
    </div>
</div>

