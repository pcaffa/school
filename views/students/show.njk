{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background:url({{ student.avatar }}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Estudante</div>
                <div>{{ student.name }}</div>                
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{ student.email }}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{ student.birth }}</div>
            </div>

            <div class="item">
                <div>Ano Escolar</div>
                <div>{{ student.schoolYear }}</div>
            </div>

            <div class="item">
                <div>Carga Horária Semanal</div>
                <div>{{ student.weeklySchedule }}</div>
            </div>

            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>
        </section>
    </div>
{% endblock content %}